{{> navbar }}

<form action='/api/posts' method="POST">


{{!-- this section to display the logged in username. Need to figure out how to pull from the db--}}
<div class="field">
  <label class="label">Username</label>
</div>


<div class="field">
  <label class="label">Post type</label>
  <div class="control">
    <div class="select">
      <select name='posttype'>
        <option>Question</option>
        <option>Observation</option>
        <option>Code snippet</option>
      </select>
    </div>
  </div>
</div>

<div class="field">
  <label for="title" class="label">Title</label>
  <div class="control">
    <input class='input' type="text" placeholder="Post Title" name='title'>
  </div>
</div>
<div class="field">
  <label class="label">Post Content</label>
  <div class="control">
    <textarea class="textarea" placeholder="Type your post here" rows="25" name='content'></textarea>
  </div>
</div>


<div class="field is-grouped">
  <div class="control">
    <button class="button is-link">Submit</button>
  </div>
  <div class="control">
    <button class="button is-text">Cancel</button>
  </div>
</div>

</form>