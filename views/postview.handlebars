<div class="container">
    <article class="media">
    <figure class="media-left">
        <p class="image is-64x64">
        <img src="{{postinfo.User.userImage}}">
        </p>
    </figure>
    <div class="media-content">
        <div class="content">
        <p>
            <strong>{{postinfo.User.username}}</strong>
            <br>
            {{postinfo.title}}
            <br>
            {{postinfo.content}}
            <br>
        </p>
        </div>
    {{#each postinfo.Comments}}
        <article class="media">
        <figure class="media-left">
            <p class="image is-48x48">
            <img src="{{this.createdByImg}}">
            </p>
        </figure>
        <div class="media-content">
            <div class="content">
            <p>
                <strong>{{this.createdBy}}</strong>
                <br>
                {{this.content}}
                <br>
            </p>
            </div>
        </div>
        </article>
    {{/each}}
        </div>
    </div>

    </article>
    <article class="media">
    {{#if user}}
    <figure class="media-left">
        <p class="image is-64x64">
        <img src="{{user.userImage}}">
        <p>{{user.username}}</p>
        </p>
    </figure>
    <div class="media-content">
        <form action="/api/comments" method="POST">
            <div class="field">
                <label class='label'for="comment-title">What's the comment title?</label>
                <div class="control">
                    <input type="text" name="title">
                </div>
            </div>
            <div class="field">
                <p class="control">
                    <textarea name="content" class="textarea" placeholder="Add a comment..."></textarea>
                </p>
            </div>
            <div class="field" style="display:none">
                <label class="label">Post Id</label>
                <div class="control">
                    <div class="select">
                        <select name="postid">
                            <option>{{postinfo.id}}</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field">
                <p class="control">
                    <button class="button">Post comment</button>
                </p>
            </div>
        </form>
    </div>
    {{else}}
    <div class="container">
        <div>
            <a href="/login">Log in</a> to participate in the conversation!
        </div>
    </div>
    </article>
    {{/if}}
</div>