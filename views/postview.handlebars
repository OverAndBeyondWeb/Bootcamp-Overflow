
{{> navbar }}

<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        {{postinfo.title}}
      </h1>
    </div>
  </div>
</section>
<div class="container postlist">
    <article class="media">
        <figure class="media-left">
            <p class="image is-64x64">
                <a href="/user/{{postinfo.User.username}}"><img src="{{postinfo.User.userImage}}"></a>
            </p>
        </figure>
        <div class="media-content">
            <div class="content">
                <p>
                    <strong>{{postinfo.User.username}}</strong>
                    <br>
                    {{postinfo.content}}
                    <br>
                </p>
            </div>
        
            {{#each postinfo.Comments}}
                <article class="media">
                    <figure class="media-left">
                        <p class="image is-48x48">
                            <a href="/user/{{this.createdBy}}"><img src="{{this.createdByImg}}"></a>
                        </p>
                    </figure>
                    <div class="media-content">
                        <div class="content">
                            <p>
                                <strong>{{this.createdBy}}</strong>
                                <br>
                                {{this.content}}
                                <br>
                            </p>
                        </div>
                    </div>
                </article>
            {{/each}}
        </div>
    </article>
    <article class="media">
    {{#if user}}
    <figure class="media-left">
        <p class="image is-64x64">
        <img src="{{user.userImage}}">
        <p>{{user.username}}</p>
        </p>
    </figure>
    <div class="media-content">
        <form action="/api/comments" method="POST">
            <div class="field">
                <label class='label'for="comment-title">What's the comment title?</label>
                <div class="control">
                    <input type="text" name="title">
                </div>
            </div>
            <div class="field">
                <p class="control">
                    <textarea name="content" class="textarea" placeholder="Add a comment..."></textarea>
                </p>
            </div>
            <div class="field" style="display:none">
                <label class="label">Post Id</label>
                <div class="control">
                    <div class="select">
                        <select name="postid">
                            <option>{{postinfo.id}}</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field is-grouped">
                <div class="field">
                    <p class="control">
                        <button class="button">Post comment</button>
                    </p>
                </div>
                <div class="field">
                    <p class="control">
                        <button type="reset" class="button">Cancel</button>
                    </p>
                </div>
            </div>
        </form>
    </div>
    {{else}}
    <section class="hero is-primary is-bold">
        <div class="hero-body">
          <div>
            <h1 class="title">
              Sorry comments are only available to members.
            </h1>
            <h2 class="subtitle">
              You must <a href="/login">log in</a> or <a href="/signup">sign up</a> to access
            </h2>
          </div>
        </div>
      </section>
    </article>
    {{/if}}
</div>
